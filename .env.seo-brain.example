# ============================================================================
# SEO BRAIN CONFIGURATION
# ============================================================================
# Copy these variables to your .env file and fill in the values

# Telegram Bot Configuration
# Bot Name: Micheal (SEO LLM Landing Page Master)
SEO_BRAIN_TELEGRAM_BOT_TOKEN=7510262123:AAFiInboeGKrhovu8hcmDvZsDgEpS3W1yWs

# Your Telegram Chat ID (get this by messaging @userinfobot on Telegram)
TELEGRAM_ADMIN_CHAT_ID=your_chat_id_here

# SEO Brain Operating Mode
SEO_BRAIN_MODE=CONSERVATIVE
# Options: CONSERVATIVE | SEMI_AUTONOMOUS | FULLY_AUTONOMOUS

# Ollama Configuration (should already be set)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:32b
# Alternative: llama3.2:70b

# Analysis Settings
SEO_BRAIN_ANALYSIS_FREQUENCY=daily
# Options: hourly | daily | weekly

SEO_BRAIN_MAX_DECISIONS_PER_CYCLE=5
# Maximum number of decision requests to send per analysis cycle

SEO_BRAIN_WINNER_THRESHOLD=80
# Performance score threshold to be considered a "winner" (0-100)

SEO_BRAIN_LOSER_THRESHOLD=40
# Performance score threshold to be considered needs help (0-100)

# Notification Settings
SEO_BRAIN_SEND_OPPORTUNITIES=true
SEO_BRAIN_SEND_ISSUES=true
SEO_BRAIN_SEND_WINNERS=true
SEO_BRAIN_SEND_LOSERS=true
SEO_BRAIN_SEND_COMPLETIONS=true

# Performance Tracking
SEO_BRAIN_TRACK_SNAPSHOTS=true
# Save daily performance snapshots for historical analysis

SEO_BRAIN_RETENTION_DAYS=90
# How many days to keep performance snapshots (90 = 3 months)
