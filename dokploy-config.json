{
  "name": "gangrunprinting",
  "description": "GangRun Printing E-commerce Platform",
  "repository": "https://github.com/iradwatkins/gangrunprinting.git",
  "branch": "main",
  "buildCommand": "npm ci && npm run build",
  "startCommand": "npm start",
  "port": 3000,
  "healthCheck": "/api/health",
  "envFile": ".env.production",
  "dockerfile": "Dockerfile",
  "volumes": [
    {
      "name": "uploads",
      "path": "/app/uploads"
    }
  ],
  "networks": ["gangrun-network"],
  "dependencies": {
    "database": {
      "type": "postgresql",
      "name": "gangrun_db",
      "user": "gangrun_user",
      "version": "15"
    },
    "services": [
      {
        "name": "minio",
        "type": "storage"
      },
      {
        "name": "n8n",
        "type": "automation"
      },
      {
        "name": "ollama",
        "type": "ai"
      }
    ]
  },
  "domains": [
    {
      "name": "gangrunprinting.com",
      "ssl": true,
      "certType": "letsencrypt"
    },
    {
      "name": "www.gangrunprinting.com",
      "ssl": true,
      "certType": "letsencrypt",
      "redirect": "gangrunprinting.com"
    }
  ],
  "resources": {
    "memory": "1GB",
    "cpu": "1"
  }
}