# GangRun Printing Production Environment Variables
# Copy this file to .env.production and fill in the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://gangrun_user:your_secure_postgres_password_here@gangrun-postgres:5432/gangrun_production

# =============================================================================
# AUTHENTICATION (Lucia Auth - NOT NextAuth)
# =============================================================================
AUTH_SECRET=your_32_character_auth_secret_here
NEXT_PUBLIC_APP_URL=https://gangrunprinting.com

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://gangrun-redis:6379

# =============================================================================
# MINIO FILE STORAGE
# =============================================================================
MINIO_ACCESS_KEY=gangrun_minio_access_key
MINIO_SECRET_KEY=your_secure_minio_secret_key_here

# =============================================================================
# SQUARE PAYMENT PROCESSING
# =============================================================================
SQUARE_ACCESS_TOKEN=your_square_production_access_token
SQUARE_ENVIRONMENT=production
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_APPLICATION_ID=your_square_application_id
SQUARE_WEBHOOK_SIGNATURE_KEY=your_square_webhook_signature
NEXT_PUBLIC_SQUARE_APPLICATION_ID=your_square_application_id
NEXT_PUBLIC_SQUARE_LOCATION_ID=your_square_location_id

# =============================================================================
# EMAIL SERVICE (Resend)
# =============================================================================
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=support@gangrunprinting.com
RESEND_FROM_NAME=GangRun Printing

# =============================================================================
# N8N INTEGRATION (Existing Service)
# =============================================================================
N8N_API_KEY=your_n8n_api_key

# =============================================================================
# OPENAI FOR TRANSLATIONS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key

# =============================================================================
# PWA PUSH NOTIFICATIONS
# =============================================================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# CURRENCY EXCHANGE RATES
# =============================================================================
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Generate AUTH_SECRET with: openssl rand -base64 32
# 2. Use strong passwords for POSTGRES_PASSWORD and REDIS_PASSWORD
# 3. Never commit this file to version control
# 4. Use environment-specific values for each deployment
# 5. Rotate secrets regularly