{
  "name": "file-approval-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for the GangRun Printing file approval system",
  "scripts": {
    "test": "node run-tests.js",
    "test:ci": "TEST_BASE_URL=http://localhost:3020 node run-tests.js",
    "test:prod": "TEST_BASE_URL=https://gangrunprinting.com node run-tests.js",
    "test:quick": "npx playwright test file-approval-system.test.js --grep='Customer uploads artwork|Admin uploads proof|Customer approves'",
    "test:security": "npx playwright test file-approval-system.test.js --grep='Security Tests'",
    "test:mobile": "npx playwright test file-approval-system.test.js --grep='Mobile Responsiveness'",
    "test:performance": "npx playwright test file-approval-system.test.js --grep='Performance Tests'",
    "setup": "npm install && npx playwright install",
    "report": "npx playwright show-report",
    "debug": "npx playwright test file-approval-system.test.js --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "file-approval",
    "printing",
    "playwright"
  ],
  "author": "GangRun Printing Development Team",
  "license": "MIT"
}